<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:translationZ="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#ACD7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Day 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Spend 15 minutes outdoors"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />



        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Put some time on your calendar to take a walk outside or maybe even take a meeting while you're strolling through your neighborhood."
            android:textSize="15sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
